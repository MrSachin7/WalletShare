<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.Fragments.HomeFragment"
    android:background="@color/palette_yellow"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView

            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:id="@id/balanceCardView"
            app:cardBackgroundColor="@color/palette_cyan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="40dp"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/balance"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/viewCurrentBalance1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="20dp"
                android:layout_marginTop="90dp"
                android:textSize="20sp"


                />

        </com.google.android.material.card.MaterialCardView>








        <com.google.android.material.card.MaterialCardView

            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:id="@id/listOfLastRecord"
            app:cardBackgroundColor="@color/palette_pink"

            app:cardCornerRadius="40dp"



            app:layout_constraintTop_toBottomOf="@+id/balanceCardView"
            tools:layout_editor_absoluteX="0dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/last_records"
                android:textSize="30sp" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:id="@+id/listOfLastRecord"/>

            <Button
                android:id="@+id/button"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="150dp"
               android:layout_marginLeft="90dp"


                android:backgroundTint="@color/transparent"
                android:text="@string/see_more"
                android:textColor="@color/white"

                android:onClick="seeMoreRecords"/>

        </com.google.android.material.card.MaterialCardView>






    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>



