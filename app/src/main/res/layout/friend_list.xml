<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/palette_cyan"
    android:clickable="true"


    android:focusable="true"


    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"

    app:strokeWidth="5dp">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="#D5B0E8D3"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >

        <TextView


            android:id="@+id/friendNameInList"
          android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/heletica_regular_family"
            android:padding="1dp"
            android:paddingStart="15dp"

            android:text="Member"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:ellipsize="start"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="end"
            android:id="@+id/friendRequestList">
            <TextView
                android:id="@+id/acceptFriendRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCEPT"/>
            <TextView
                android:id="@+id/rejectFriendRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REJECT"/>
        </LinearLayout>



    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>
